{
  "build": {
    "command": "npm run build && composer install --no-dev --optimize-autoloader && php artisan config:cache",
    "environment": {
      "PHP_VERSION": "8.1"
    }
  },
  "routes": [
    {
      "pattern": "/(.*)",
      "script": "functions/[[path]].php"
    }
  ],
  "headers": {
    "/*": {
      "X-Frame-Options": "DENY",
      "X-Content-Type-Options": "nosniff"
    }
  }
}
